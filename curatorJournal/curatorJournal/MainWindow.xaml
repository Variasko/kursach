<Window x:Class="curatorJournal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:curatorJournal"
        mc:Ignorable="d"
        Background="#b3e0ff"
        Title="Авторизация" Height="250" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="Логин" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <Label Content="Пароль" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>

        <TextBox x:Name="loginEnter" Grid.Row="0" Grid.Column="1" Margin="20" FontSize="20" Text="1"/>
        <TextBox x:Name="passwordEnter" Grid.Row="1" Grid.Column="1" Margin="20" FontSize="20" Text="1"/>

        <Button x:Name="signInButton" Content="Войти" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="100 15" Background="#FFAA8DFB"/>

    </Grid>

</Window>
